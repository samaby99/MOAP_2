<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_news_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:minHeight="150dp"
                    tools:src="#FF0000FF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_news_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#AAFFFFFF"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >

                    <TextView
                        android:id="@+id/tv_news_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        tools:text="Heading"
                        />

                    <TextView
                        android:id="@+id/tv_news_item_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="Author"
                        />

                    <TextView
                        android:id="@+id/tv_news_item_publication_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="Date"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_news_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                tools:text="Description"/>

            <TextView
                android:id="@+id/tv_news_item_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textSize="12sp"
                tools:text="Description"/>

            <Button
                android:id="@+id/bt_news_item_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_full_article"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
